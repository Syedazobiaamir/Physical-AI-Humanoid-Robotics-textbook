# ===========================================
# REQUIRED: At least ONE of these AI keys
# ===========================================

# Google Gemini (RECOMMENDED - easiest to get, free tier available)
# Get your key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (Optional - if you prefer GPT models)
# Get your key at: https://platform.openai.com/api-keys
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (Optional - for translation/advanced features)
# Get your key at: https://console.anthropic.com/settings/keys
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# OPTIONAL: Vector Database (Qdrant)
# Without this, RAG/ChatBot won't work but site will load
# ===========================================

# Qdrant Cloud (Free tier: https://cloud.qdrant.io)
QDRANT_URL=https://your-cluster.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here

QDRANT_COLLECTION_NAME=physical_ai_textbook

# ===========================================
# OPTIONAL: Database
# If not set, uses SQLite locally (no setup needed!)
# ===========================================

# Neon Postgres (Free tier: https://neon.tech)
# NEON_DB_URL=postgresql://user:password@your-neon-project.neon.tech/physical_ai_textbook

# Or any PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost/physical_ai_textbook

# ===========================================
# REQUIRED: Clerk Authentication (for user login)
# Get your keys at: https://dashboard.clerk.com
# ===========================================

# Clerk Webhook Secret (from Clerk Dashboard > Webhooks)
# Used to verify webhook signatures from Clerk
CLERK_WEBHOOK_SECRET=whsec_your_clerk_webhook_secret_here

# JWT Secret (generate with: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET_KEY=change_this_to_a_random_string_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OPTIONAL: OAuth (only if using direct OAuth instead of Clerk)
# Google OAuth (https://console.cloud.google.com/apis/credentials)
# GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth (https://github.com/settings/developers)
# GITHUB_CLIENT_ID=your_github_client_id_here
# GITHUB_CLIENT_SECRET=your_github_client_secret_here

# ===========================================
# Application Settings
# ===========================================

BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
PROJECT_NAME=Physical AI & Humanoid Robotics Textbook
API_V1_STR=/api/v1
DEBUG=true
ENVIRONMENT=development

# LLM Provider Selection (auto = use whichever is configured)
LLM_PROVIDER=auto
EMBEDDING_PROVIDER=auto

# Model Configuration
GEMINI_MODEL=gemini-1.5-flash
GEMINI_EMBEDDING_MODEL=models/text-embedding-004
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# RAG Settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Rate Limiting
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_UNAUTH_PER_HOUR=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
